<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.ddj.dudujia.view.TitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="违章查询" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="车牌号码"
                android:textColor="@color/gray33"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/etLicensePlate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="车牌号码"
                android:textColor="@color/gray33"
                android:textSize="14dp"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/ll_license_input_boxes_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_car_license_inputbox1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:gravity="center_horizontal|center_vertical" />

                <EditText
                    android:id="@+id/et_car_license_inputbox2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:gravity="center_horizontal|center_vertical" />

                <EditText
                    android:id="@+id/et_car_license_inputbox3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:gravity="center_horizontal|center_vertical" />

                <EditText
                    android:id="@+id/et_car_license_inputbox4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:gravity="center_horizontal|center_vertical" />

                <EditText
                    android:id="@+id/et_car_license_inputbox5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:gravity="center_horizontal|center_vertical" />

                <EditText
                    android:id="@+id/et_car_license_inputbox6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:gravity="center_horizontal|center_vertical" />

                <EditText
                    android:id="@+id/et_car_license_inputbox7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:gravity="center_horizontal|center_vertical" />
            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="选择车型"
                android:textColor="@color/gray33"
                android:textSize="17dp" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cbCarSamll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="小型车" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cbCarLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="大型车" />

        </LinearLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="发动机号"
                android:textColor="@color/gray33"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/etEngineNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="用于核实车主本人"
                android:maxLength="9"
                android:textColor="@color/gray33"
                android:textSize="14dp" />
        </LinearLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="VIN"
                android:textColor="@color/gray33"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/etVin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="用于核实车主本人"
                android:maxLength="17"
                android:textColor="@color/gray33"
                android:textSize="14dp" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="我已同意《违章代缴协议》\n授权笃笃驾使用我的个人信息用于查询违章查询" />

        <Button
            android:id="@+id/btQuery"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="70dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/gray33"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#F0EFF4"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyBackground="@android:color/white"
            android:keyTextColor="#5E5E5E"
            android:keyTextSize="18sp"
            android:labelTextSize="18sp"
            android:paddingTop="5dp"
            android:shadowColor="#ffffff"
            android:shadowRadius="0.0"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>