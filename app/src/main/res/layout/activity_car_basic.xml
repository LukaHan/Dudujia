<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ddj.dudujia.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="基本信息" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="VIN"
                    android:textColor="@color/gray3e"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvVin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:text=""
                    android:textColor="@color/gray3e"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="车牌号码"
                    android:textColor="@color/gray3e"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:text=""
                    android:textColor="@color/gray3e"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="登记日期"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_registerdt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/background" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="年审期限"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_limiteddt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="制造厂商"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_manufacturer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/background" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="车辆名称"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_vehiclename"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="等级配置"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/background" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="车辆型号"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_vehiclemodel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="行驶里程"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_mileage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/background" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="排量"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_displacement"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="车辆类型"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_vehicletype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/background" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="核定载客"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_passenger"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="车身颜色"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_bodycolore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/background" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:text="内饰颜色"
                        android:textColor="@color/gray3e"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_interiorcolor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="bottom"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/gray3e"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="变速方式"
                    android:textColor="@color/gray3e"
                    android:textSize="12sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_transmissionmode"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:text="AT" />

                    <RadioButton
                        android:id="@+id/rb_transmissionmode1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="MT" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="驱动方式"
                    android:textColor="@color/gray3e"
                    android:textSize="12sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_drivingmode"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:text="2WD" />

                    <RadioButton
                        android:id="@+id/rb_drivingmode1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="4WD" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="使用性质"
                    android:textColor="@color/gray3e"
                    android:textSize="12sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_useproperty"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:text="营运" />

                    <RadioButton
                        android:id="@+id/rb_useproperty1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="非营运" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="空调系统"
                    android:textColor="@color/gray3e"
                    android:textSize="12sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_airsystem"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:text="手动" />

                    <RadioButton
                        android:id="@+id/rb_airsystem1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="恒温" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="燃油类型"
                    android:textColor="@color/gray3e"
                    android:textSize="12sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_ranyou"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:text="手动" />

                    <RadioButton
                        android:id="@+id/rb_ranyou1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="恒温" />
                </RadioGroup>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>